<div class="col-sm-12 login-background">
  <div class="col-sm-4 col-sm-offset-4 text-center">
    <div class="panel panel-default devise-bs text-center" style="margin:50px 0 50px">
      <!-- <div class="panel-heading">
        <h4><%= t('.sign_in', :default => "Sign in") %></h4>
      </div> -->
      <div class="panel-body bg-info">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: "form" }) do |f| %>
          <div class="form-group">
            <!-- <%= f.label :email %> -->
            <%= f.email_field :email, autofocus: true, class: "form-control", placeholder:"Email" %>
          </div>
          <div class="form-group">
            <!-- <%= f.label :password %> -->
            <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder:"ContraseÃ±a" %>
          </div>

          <%= f.submit  t('.sign_in', :default => "Sign in"), class: "btn btn-primary btn-block btn-lg" %>
          <% if devise_mapping.rememberable? %>
            <div class="checkbox">
              <%= f.label :remember_me do %>
                <%= f.check_box :remember_me %>Recuerdame
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    <%= render "devise/shared/links" %>

  </div>
</div>